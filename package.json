{
  "name": "reactriot2017-kindness-is-the-dankest-meme",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^8.1.2",
    "npm": "^5.0.3"
  },
  "files": [
    "config",
    "public",
    "scripts",
    "server",
    "src"
  ],
  "main": "./server/index.js",
  "contributors": [
    "Reza Akhavan <reza@akhavan.me> (https://github.com/jedireza)",
    "Robbie Dawson <robhdawson@gmail.com> (https://github.com/robhdawson/)",
    "Mark Fox <mark@ixel.org> (https://github.com/mfdj/)",
    "Matt Hayes <matt@mysterycommand.com> (https://github.com/mysterycommand/)"
  ],
  "dependencies": {
    "express": "^4.15.3",
    "express-ws": "^3.0.0",
    "konva": "^1.5.0",
    "prop-types": "^15.5.10",
    "react": "~15.5.1",
    "react-dom": "~15.5.0",
    "react-konva": "^1.1.3",
    "react-redux": "^5.0.5",
    "redux": "^3.7.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-react-app": "^3.0.0",
    "babel-runtime": "^6.23.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^1.1.3",
    "css-loader": "^0.28.4",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-prettier": "^2.2.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "fs-extra": "^3.0.1",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.4",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "object-assign": "^4.1.1",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.4.4",
    "promise": "^8.0.0",
    "react-dev-utils": "^3.0.0",
    "react-error-overlay": "^1.0.7",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "sw-precache-webpack-plugin": "^0.11.3",
    "url-loader": "^0.5.9",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.5.0",
    "webpack-manifest-plugin": "^1.1.0",
    "webpack-merge": "^4.1.0",
    "whatwg-fetch": "^2.0.3"
  },
  "scripts": {
    "dev": "node ./scripts/start.js",
    "build": "node ./scripts/build.js",
    "serve": "NODE_ENV=production node ./server/index.js",
    "start": "yarn build && yarn serve",
    "now-start": "NODE_ENV=production PORT=80 node ./server/index.js",
    "test": "node ./scripts/test.js --env=jsdom"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "all"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "config/webpack.config.base.js"
        }
      }
    }
  }
}
